extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main
    h1(class="mb-4 text-center") Quản lý sản phẩm

    .card.mb-3
        .card-header.text-white.bg-primary Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-md-6
                    +filter-status(filterStatus)
                .col-md-6
                    +search(keyword)

    .card.mb-3
        .card-header.text-white.bg-secondary Sắp xếp
        .card-body
            .row
                .col-md-5
                    div(sort)
                        select(
                            class="form-control"
                            name="sort"
                            sort-select
                        )
                            option(value="position-desc") Vị trí giảm dần
                            option(value="position-asc") Vị trí tăng dần
                            option(value="price-desc") Giá giảm dần
                            option(value="price-asc") Giá tăng dần
                            option(value="title-asc") Tiêu đề A - Z
                            option(value="title-desc") Tiêu đề Z - A

                        button(
                            class="btn btn-danger mt-2"
                            sort-clear
                        ) Clear

    .card.mb-3
        .card-header.text-white.bg-success Danh sách
        .card-body
            div(class="text-right mb-2")
                a(
                    href=`/${prefixAdmin}/products/create`
                    class="btn btn-outline-success"
                ) + Thêm mới

            table.table.table-hover.table-sm.table-bordered
                thead
                    tr
                        th
                            input(name="checkAll" type="checkbox")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Tạo bởi
                        th Cập nhật
                        th Hành động

                tbody
                    each item, index in products
                        tr 
                            td
                                input(
                                    name="checkItem" 
                                    type="checkbox"
                                    value=item.id
                                )
                            td #{index + 1}
                            td
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                    class="img-thumbnail"
                                    width="80px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.price}$                                            
                            td
                                input(
                                    link=`/${prefixAdmin}/products/change-position/${item.id}`
                                    type="number"
                                    name="position"
                                    value=item.position
                                    class="form-control"
                                    style="width: 60px"
                                    min="1"
                                )
                            td
                                if(item.status == "active")
                                    button(
                                        link=`/${prefixAdmin}/products/change-status/inactive/${item.id}`
                                        class="badge badge-success"
                                        button-change-status
                                    ) Hoạt động
                                else
                                    button(
                                        link=`/${prefixAdmin}/products/change-status/active/${item.id}`
                                        class="badge badge-danger"
                                        button-change-status
                                    ) Dừng hoạt động
                            td
                                div #{item.createdByFullName}
                                div #{item.createdAtFormat}
                            td
                                div #{item.updatedByFullName}
                                div #{item.updatedAtFormat}
                            td
                                a(
                                    class="btn btn-info btn-sm"
                                    href=`/${prefixAdmin}/products/detail/${item.id}`
                                ) Chi tiết                              
                                a(
                                    class="btn btn-warning btn-sm"
                                    href=`/${prefixAdmin}/products/edit/${item.id}`
                                ) Sửa                            
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    button-delete=`/${prefixAdmin}/products/delete/${item.id}`
                                ) Xóa
    +pagination(objectPagination)
