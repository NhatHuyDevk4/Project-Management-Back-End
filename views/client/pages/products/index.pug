extend ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    +box-head('Page list products')

    .container
        .row.justify-content-center
            each item in products
                .col-md-6.col-lg-4.mb-4
                    .card.shadow-sm.h-100
                        img.card-img-top(src=item.thumbnail, alt=item.title)
                        .card-body.d-flex.flex-column
                            h5.card-title #{item.title}
                            p.card-text.text-success.font-weight-bold #{item.priceNew}$
                            p.card-text.text-muted.text-decoration-line-through #{item.price.toFixed(2)}
                            span.badge.badge-danger #{item.discountPercentage}%
                            .mt-auto
                                a.btn.btn-primary(href=`/products/${item.id}`) View Details